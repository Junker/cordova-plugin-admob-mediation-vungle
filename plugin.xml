<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-admob-mediation-vungle" version="1.0.0"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <name>cordova-plugin-admob-mediation-vungle</name>
    <description>Cordova AdMob Mediation Plugin for Vungle</description>

    <engines>
        <engine name="cordova" version=">=3" />
    </engines>

    <platform name="android">
        <framework src="com.google.ads.mediation:vungle:6.8.1.0" />
    </platform>

    <platform name="ios">
        <podspec>
            <config>
                <source url="https://cdn.cocoapods.org/"/>
            </config>
            <pods use-frameworks="true">
                <pod name="GoogleMobileAdsMediationVungle" spec="6.9.2.0"/>
            </pods>
        </podspec>

        <header-file src="src/ios/Vungle.h" />
        <source-file src="src/ios/Vungle.m" />
    </platform>

	<config-file parent="/*" target="config.xml">
		<preference name="BANNER_ID" value="$BANNER_ID"/>
		<preference name="INTERSTITIAL_ID" value="$INTERSTITIAL_ID"/>
		<preference name="REWARDED_ID" value="$REWARDED_ID"/>
	</config-file>
</plugin>
